<project name="smppapi" basedir="." default="dist">
  <!-- Set this to javac to use Sun's JDK -->
  <property name="build.compiler" value="jikes"/>
  <!-- Set this to true for using Vim quickfix mode -->
  <property name="build.compiler.emacs" value="false"/>

  <property name="src" value="src"/>
  <property name="build" value="classes"/>
  <property name="dist" value="dist"/>
  <property name="apiDocs" value="docs/apiDocs"/>

  <!-- Create the destination directory -->
  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <!-- Build the API -->
  <target name="api" depends="init">
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="dist" depends="api">
    <mkdir dir="${dist}"/>
    <jar jarfile="${dist}/smppapi.jar" basedir="${build}"/>
  </target>

  <!-- Build the javadoc files -->
  <target name="docs">
    <mkdir dir="${apiDocs}"/>
    <javadoc sourcepath="src"
             destdir="${apiDocs}"
             packagenames="ie.omk.smpp,ie.omk.smpp.message,ie.omk.smpp.net,ie.omk.smpp.util,ie.omk.debug"
             Overview="docs/overview.html"
             protected="true"
             version="true"
             author="true"
             Windowtitle="Java SMPP API documentation"
             bottom="&lt;font size=-1&gt;&lt;i&gt;&amp;copy; Copyright 2001 by Oran Kelly&lt;/i&gt;&lt;/font&gt;"
             header="&lt;b&gt;&lt;font size=-1&gt;SMPPAPI&lt;/font&gt;&lt;br&gt;documentation&lt;/b&gt;"/>


  </target>

  <!-- Build the examples -->
  <target name="examples" depends="api">
    <javac srcdir="examples" destdir="examples">
      <classpath path="${build}"/>
    </javac>
  </target>

  <!-- Clean up -->
  <target name="clean">
    <delete dir="${dist}"/>
    <delete dir="${build}"/>
    <delete>
      <fileset dir="examples">
        <include name="*.class"/>
      </fileset>
    </delete>
  </target>
</project>
